<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/currencyappbackground"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".convertedPanel">

    <Button
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"

        android:text="Return" />

    <TextView
        android:id="@+id/showILSAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="6sp"
        android:background="@color/white"
        android:text="{} ILS is worth:"

        android:textSize="25dp" />

    <TextView
        android:id="@+id/showEuroValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="6sp"
        android:background="@color/white"
        android:text="{} EURO"

        android:textSize="25dp" />

    <TextView
        android:id="@+id/showUSDValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="6sp"
        android:background="@color/white"
        android:text="{} USD"
        android:textSize="25dp" />

    <Button
        android:id="@+id/readButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read Values" />
</LinearLayout>